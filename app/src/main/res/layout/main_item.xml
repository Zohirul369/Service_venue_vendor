<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:elevation="6dp"
        app:cardUseCompatPadding="true"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:background="@color/white"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/client_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/blue1"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/cname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/client_img"
                android:text="name"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/cname"
                android:text="01947937424" />

            <TextView
                android:id="@+id/text_job_task"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@id/cname"
                android:layout_toRightOf="@id/client_img"
                android:text="Job Task" />

            <TextView
                android:id="@+id/job_task"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_job_task"
                android:layout_toRightOf="@id/client_img"
                android:layout_marginStart="10dp"
                android:text="Tab Wash"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cname"
                android:layout_toRightOf="@id/text_job_task"
                android:text="Address Title" />

            <TextView
                android:id="@+id/address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_job_task"
                android:layout_toRightOf="@id/job_task"
                android:layout_marginStart="0dp"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_accept_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_title"
                android:layout_toRightOf="@id/job_task"
                android:backgroundTint="@color/Green"
                android:text="Accept Job"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_cancel_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_accept_job"
                android:layout_toRightOf="@id/job_task"
                android:backgroundTint="#FFDC0F38"
                android:text="Cancel Job"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_task"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/client_img"
                android:text="Date" />

            <TextView
                android:id="@+id/cdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/client_img"
                android:layout_below="@id/text_date"
                android:layout_marginStart="10dp"
                android:text="04/02/2024"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cdate"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/client_img"
                android:text="Address" />

            <TextView
                android:id="@+id/caddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_address"
                android:layout_toRightOf="@id/client_img"
                android:layout_marginStart="10dp"
                android:text="Dhaka,Gazipur"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>