<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Service_Venue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lavender</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Service_Venue" parent="Base.Theme.Service_Venue" />

    <!-- SplashScreen -->
    <style name="Splash_Screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
<!--        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorPrimary</item>-->

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>

    </style>

    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="NightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="NotificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>


    <style name="TextViewStyle" parent="android:Widget.TextView">

        <item name="android:textSize">15dp</item>
    </style>

    
</resources>